defaults: &defaults
  host: 127.0.0.1
  port: 27017

development:
  <<: *defaults
  database: rails_wizard_development

test:
  <<: *defaults
  database: rails_wizard_test

# set these environment variables on your prod server
production:
  <<: *defaults
  database: rails_wizard
  username: <%= ENV['MONGO_USERNAME'] %>
  password: <%= ENV['MONGO_PASSWORD'] %>
